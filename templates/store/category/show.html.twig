{% extends 'store/category/_base.html.twig' %}

{% block titleContent %}{{ parent() }} show{% endblock %}

{% block bodyContent %}

    <h1>Category</h1>

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ category.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">#{{ category.id }}</h6>
            <p class="card-text">{{ category.description }}</p>
            <a href="{{ path("store_category_edit", { "id": category.id}) }}" class="card-link">Edit</a>

            <form method="post" action="{{ path("store_category_delete", { "id": category.id}) }}">
                <input type="hidden" name="_method" value="delete"/>
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}"/>
                <button>Delete</button>
            </form>



        </div>
    </div>

{% endblock %}